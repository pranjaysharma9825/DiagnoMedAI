# Environment Configuration for DDX Diagnostic System
# Copy this file to .env and fill in your values

# =============================================================================
# LLM PROVIDERS
# =============================================================================

# Ollama (Local) - Primary provider for cost savings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b
DEFAULT_LLM_PROVIDER=ollama

# Groq Cloud - For complex reasoning tasks
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Google AI Studio - For high-speed reasoning
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-3-flash-preview

# =============================================================================
# EXTERNAL APIS (Optional)
# =============================================================================

USE_EXTERNAL_APIS=false
WHO_GHO_API_URL=https://ghoapi.azureedge.net/api

# =============================================================================
# DIAGNOSTIC SETTINGS
# =============================================================================

CONFIDENCE_THRESHOLD=0.85
MAX_DIAGNOSTIC_ITERATIONS=10
DEFAULT_BUDGET_USD=5000.0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

DEBUG=true
